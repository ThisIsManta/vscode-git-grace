{
  "pre-commit": {
    "commands": {
      "lint": {
        "run": "npm exec biome check --diagnostic-level=error --log-kind=compact --write {staged_files}",
        "stage_fixed": true
      }
    }
  },
  "commit-msg": {
    "commands": {
      "lint": {
        "run": "npx lint-commit-message {1}"
      }
    }
  }
}