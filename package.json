{
    "name": "git-grace",
    "displayName": "Manta's Git Grace",
    "description": "Add handy and persistent Git commands.",
    "version": "0.0.2",
    "publisher": "thisismanta",
    "categories": [
        "Other"
    ],
    "keywords": [
        "git"
    ],
    "repository": {
        "url": "https://github.com/ThisIsManta/vscode-git-grace"
    },
    "bugs": {
        "url": "https://github.com/ThisIsManta/vscode-git-grace/issues"
    },
    "icon": "docs/logo.png",
    "galleryBanner": {
        "color": "#ff3d00",
        "theme": "light"
    },
    "engines": {
        "vscode": "^1.18.0"
    },
    "activationEvents": [
        "*"
    ],
    "main": "./dist/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "TortoiseGit",
            "properties": {
                "gitGrace.tortoiseGitPath": {
                    "type": "string",
                    "default": "C:\\Program Files\\TortoiseGit\\bin\\TortoiseGitProc.exe",
                    "description": "Path to TortoiseGit executable (TortoiseGitProc.exe)."
                }
            }
        },
        "commands": [
            {
                "command": "gitGrace.fetch",
                "title": "Fetch (Persistent)",
                "category": "Git"
            },
            {
                "command": "gitGrace.pull",
                "title": "Pull (Persistent)",
                "category": "Git"
            },
            {
                "command": "gitGrace.push",
                "title": "Push (Persistent)",
                "category": "Git"
            },
            {
                "command": "gitGrace.commitEmpty",
                "title": "Commit Empty",
                "category": "Git"
            },
            {
                "command": "gitGrace.stash",
                "title": "Stash (Unnamed, Include Untracked)",
                "category": "Git"
            },
            {
                "command": "gitGrace.master",
                "title": "Checkout to \"origin/master\"",
                "category": "Git"
            },
            {
                "command": "gitGrace.openWeb",
                "title": "Open on Web...",
                "category": "Git"
            },
            {
                "command": "gitGrace.pullRequest",
                "title": "Create Pull-Request...",
                "category": "Git"
            },
            {
                "command": "gitGrace.sync",
                "title": "Sync (Gracefully)",
                "category": "Git"
            },
            {
                "command": "gitGrace.deleteMergedBranches",
                "title": "Delete Merged Branches...",
                "category": "Git"
            },
            {
                "command": "gitGrace.deleteMergedBranches.cancel",
                "title": "Delete Merged Branches (Cancel)",
                "category": "Git"
            },
            {
                "command": "tortoiseGit.showLog",
                "title": "Show Log...",
                "category": "TortoiseGit"
            },
            {
                "command": "tortoiseGit.showFileLog",
                "title": "Show File Log...",
                "category": "TortoiseGit"
            },
            {
                "command": "tortoiseGit.commit",
                "title": "Commit...",
                "category": "TortoiseGit"
            },
            {
                "command": "tortoiseGit.blame",
                "title": "Blame...",
                "category": "TortoiseGit"
            }
        ],
        "keybindings": [
            {
                "command": "gitGrace.fetch"
            },
            {
                "command": "gitGrace.pull"
            },
            {
                "command": "gitGrace.push"
            },
            {
                "command": "gitGrace.commitAmend"
            },
            {
                "command": "gitGrace.commitEmpty"
            },
            {
                "command": "gitGrace.stash"
            },
            {
                "command": "gitGrace.master"
            },
            {
                "command": "gitGrace.open"
            },
            {
                "command": "gitGrace.pullRequest"
            },
            {
                "command": "gitGrace.sync"
            },
            {
                "command": "tortoiseGit.showLog"
            },
            {
                "command": "tortoiseGit.showFileLog"
            },
            {
                "command": "tortoiseGit.commit"
            },
            {
                "command": "tortoiseGit.blame"
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "compile": "tsc --watch --project ./",
        "vscode:prepublish": "tsc --skipLibCheck --project ./",
        "version": "vsce publish",
        "postversion": "git push --tags --quiet origin master:master"
    },
    "devDependencies": {
        "@types/lodash": "^4.14.73",
        "@types/node": "^6.0.86",
        "@types/typescript": "^2.0.0",
        "vscode": "^1.1.6"
    },
    "dependencies": {
        "lodash": "^4.17.4",
        "open": "^0.0.5",
        "simple-git": "*",
        "typescript": "~2.6.1"
    }
}
